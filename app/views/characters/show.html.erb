<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <div class="row">
            <%= render 'top_card', character: @character %>
          </div>

          <div class="row">
            <div class="col s2">
              <%= render 'ability_cards', character: @character %>
            </div>

            <div class="col s3">

              <div class="card">
                <div class="card-content">
                  <span class="card-title">Proficiency Bonus</span>
                  <h5 class="center-align"><%= sprintf('%+d', @character.proficiency_bonus) %></h5>
                </div>
              </div>

              <%= render 'saves_card', character: @character %>

              <%= render 'skills_card', character: @character %>

            </div>

            <div class="col s4">

              <%= render 'status_card', character: @character %>

              <%= render 'combat_card', character: @character %>
              <%= render 'spells_card', character: @character %>

              <%= render 'equip_card', character: @character %>

              <%= render 'inventory_card', character: @character %>

            </div>

            <div class="col s3">

              <%= render 'features_card', character: @character %>

              <%= render 'background_card', character: @character %>

            </div>

          </div>
          <div class="card-action">
            <%= link_to 'Edit', edit_character_path(@character) %>
            <%= link_to 'Back', characters_path %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>