<div class="card">
  <div class="card-content">
    <span class="card-title">Saving Throws</span>
    <table>
      <thead>
      <tr>
        <th>Proficient</th>
        <th>Bonus</th>
        <th>Save</th>
      </tr>
      </thead>
      <tbody>
      <% character.all_saves.each do |save, val| %>
          <tr>
            <td><%= val[:proficient] ? material_icon.check_box : material_icon.check_box_outline_blank %></td>
            <td><%= sprintf('%+d', val[:bonus]) %></td>
            <td><%= t save %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>