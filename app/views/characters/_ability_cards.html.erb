<div class="card">
  <div class="card-content">
    <span class="card-title center-align">Abilities</span>
    <% character.all_abilities.each do |abl, val| %>
        <div class="card-panel">
          <div class="row">
            <div class="col s12">
              <h5 class="center-align"><%= abl.to_s.upcase %></h5>
              <h5 class="center-align"><%= sprintf('%+d', val[:bonus]) %></h5>
              <div class="divider"></div>
              <h6 class="center-align"><%= val[:score] %></h6>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>