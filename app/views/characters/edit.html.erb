<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="card">
        <div class="card-content">
          <span class="card-title">Editing Character</span>

          <%= render 'form', character: @character %>
          <div class="card-action">
            <%= link_to 'show', character_path(@character) %>
            <%= link_to material_icon.arrow_back, characters_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>