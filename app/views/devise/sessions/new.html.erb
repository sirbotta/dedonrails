<div class="row">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "col s12 m4 offset-m2"}) do |f| %>
      <div class="row">
        <h3>Log in</h3>
      </div>
      <div class="row">
        <div class="input-field">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>

      <div class="row">
        <div class="input-field">
          <%= f.label :password %><br/>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>

      <%= f.submit "Log in", class: "waves-effect waves-light btn" %>

      <% if devise_mapping.rememberable? -%>
          <div class="row">
            <div class="input-field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          </div>
      <% end -%>

      <div class="row" style="margin-top: 20px">
        <%= render "devise/shared/links" %>
      </div>

  <% end %>
</div>