<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
      <span class="card-title">
        <%= link_to adventure.title, adventure_path(adventure) %>
        <%= link_to material_icon.edit, edit_adventure_path(adventure) %>
        <%= link_to material_icon.delete_forever, adventure_path(adventure),
                    method: :delete,
                    data: {confirm: 'Are you sure?'} %>
        </span>
        <p>
          <%= adventure.sub_title %>
        </p>

      </div>
    </div>
  </div>
</div>
