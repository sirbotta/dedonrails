<div class="row">
  <div class="col s12 ">
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          <%= link_to act.title, act_path(act) %>
          <%= link_to material_icon.edit, edit_act_path(act) %>
          <%= link_to material_icon.delete_forever, act_path(act),
                      method: :delete,
                      data: {confirm: 'Are you sure?'} %>
        </span>
        <p>
          <%= act.text %>
        </p>

      </div>
    </div>
  </div>
</div>