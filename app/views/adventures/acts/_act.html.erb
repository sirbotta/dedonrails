<div class="row">
  <div class="col s12 ">
    <div class="card">
      <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= act.title %>
        <i class="material-icons right">more_vert</i></span>
        <p>
          <%= act.text %>
        </p>
        <div class="card-action">
          <%= link_to material_icon.zoom_in, act_path(act) %>
          <%= link_to material_icon.edit, edit_act_path(act) %>
          <%= link_to material_icon.delete_forever, act_path(act),
                      method: :delete,
                      data: {confirm: 'Are you sure?'} %>
          <%= link_to material_icon.arrow_back, acts_path %>
        </div>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4">Chapters<i class="material-icons right">close</i></span>

        <% act.chapters.each do |chapter| %>
            <p><%= link_to chapter.title, chapter_path(chapter) %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>