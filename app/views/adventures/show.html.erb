<nav class="breadcrumb-bar">
  <div class="nav-wrapper row">
    <div class="col s12">
      <%= link_to 'Adventures', adventures_path, class: 'breadcrumb' %>
      <%= link_to @adventure.title, adventure_path(@adventure), class: 'breadcrumb' %>
    </div>
  </div>
</nav>

<div class="container">



  <div class="row">
    <div class="col s8">
      <% @adventure.acts.each do |act| %>
        <%= render 'adventures/acts/act', act: act %>
      <% end %>

      <%= link_to 'Add a new Act', new_adventure_act_path(@adventure) %>
    </div>
    <div class="col s4">
      <%= render 'adventure_summary', adventure: @adventure %>
      <%= link_to 'Add a new party', new_adventure_party_path(@adventure) %>
    </div>

  </div>
</div>