<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title"><%= chapter.title %></span>
        <p>
          <%= chapter.text %>
        </p>
        <div class="card-action">
          <%= link_to material_icon.zoom_in, chapter_path(chapter) %>
          <%= link_to material_icon.edit, edit_chapter_path(chapter) %>
          <%= link_to material_icon.delete_forever, chapter_path(chapter),
                      method: :delete,
                      data: {confirm: 'Are you sure?'} %>
          <%= link_to material_icon.arrow_back, act_path(chapter.act) %>
        </div>
      </div>
    </div>
  </div>
</div>