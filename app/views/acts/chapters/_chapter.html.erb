<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          <%= link_to chapter.title, chapter_path(chapter) %>
          <%= link_to material_icon.edit, edit_chapter_path(chapter) %>
          <%= link_to material_icon.delete_forever, chapter_path(chapter),
                      method: :delete,
                      data: {confirm: 'Are you sure?'} %>
        </span>
        <p>
          <%= chapter.text %>
        </p>
      </div>
    </div>
  </div>
</div>