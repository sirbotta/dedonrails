<nav class="breadcrumb-bar">
  <div class="nav-wrapper row">
    <div class="col s12">
      <%= link_to 'Adventures', adventures_path, class: 'breadcrumb' %>
      <%= link_to @chapter.act.adventure.title, adventure_path(@chapter.act.adventure), class: 'breadcrumb' %>
      <%= link_to @chapter.act.title, act_path(@chapter.act), class: 'breadcrumb' %>
      <%= link_to @chapter.title, chapter_path(@chapter), class: 'breadcrumb' %>
    </div>
  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="col s8">
      <% @chapter.challenges.order(id: :desc).each do |challenge| %>
          <%= render 'chapters/challenges/challenge', challenge: challenge %>
      <% end %>

      <%= link_to 'Add a new challenge', new_chapter_challenge_path(@chapter) %>
    </div>
    <div class="col s4">
      <%= render 'chapter_summary', chapter: @chapter %>
    </div>

  </div>
</div>