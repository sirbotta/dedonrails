<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title"><h2><%= chapter.title %></h2></span>
        <div class="row">
          Npcs:
          <% chapter.npcs.each do |npc| %>
            <%= link_to npc.name, npc  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>